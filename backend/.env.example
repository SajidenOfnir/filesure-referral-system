# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
# Local: mongodb://localhost:27017/filesure-referral
# Atlas: mongodb+srv://username:password@cluster.mongodb.net/DatabaseName
MONGODB_URI=mongodb://localhost:27017/filesure-referral

# JWT Configuration
# Generate a secure secret: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_min_32_chars
JWT_EXPIRES_IN=7d

# CORS Configuration
FRONTEND_URL=https://filesure-referral-frontend.vercel.app

# Credit System Configuration
REFERRAL_CREDIT_AMOUNT=2
PURCHASE_CREDIT_AMOUNT=2
